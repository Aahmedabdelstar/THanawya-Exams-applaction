<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    >


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <ImageView
            
            android:layout_margin="10dp"
            android:layout_width="350dp"
            android:layout_height="700dp"
            android:background="@drawable/pen"
            android:id="@+id/image">

        </ImageView>

        <Button

            android:layout_margin="20dp"
            android:visibility="visible"
            android:layout_width="345dp"
            android:layout_height="70dp"
            android:text="تابعنا"

            android:id="@+id/About_Us"

            android:textSize="50sp"
            android:background="#ffffff"
            android:textColor="#a82323"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"


            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">
        <Button

            android:layout_margin="40dp"
            android:visibility="visible"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="امتحانات البوكليت"

            android:id="@+id/bokl"

            android:background="#ffffff"
            android:textColor="#a82323"

            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"


            />

        <Button
            android:visibility="visible"

            android:layout_margin="40dp"
            android:text="امتحانات دليل التقويم"
            android:id="@+id/proof"

            android:background="#ffffff"
            android:textColor="#a82323"

            android:layout_below="@+id/bokl"
            android:layout_centerHorizontal="true"

            android:textSize="30sp"
            android:layout_width="300dp"
            android:layout_height="70dp"

            />

        <Button
            android:text="امتحانات التجريبية للوزارة"
            android:id="@+id/exp_ministry"
            android:layout_below="@+id/proof"

            android:visibility="visible"
            android:layout_margin="40dp"
            android:background="#ffffff"
            android:textColor="#a82323"

            android:textSize="30sp"
            android:layout_width="300dp"
            android:layout_height="70dp"

            />

        <Button
            android:text="امتحانات السنوات السابقة"
            android:id="@+id/past_exam"
            android:layout_below="@+id/exp_ministry"

            android:visibility="visible"
            android:layout_margin="40dp"
            android:background="#ffffff"
            android:textColor="#a82323"

            android:textSize="30sp"
            android:layout_width="300dp"
            android:layout_height="70dp"

            />

        <Button
            android:text="امتحانات السودان"
            android:id="@+id/sudan_exam"
            android:layout_below="@+id/past_exam"

            android:visibility="visible"
            android:layout_margin="40dp"
            android:background="#ffffff"
            android:textColor="#a82323"

            android:textSize="30sp"
            android:layout_width="300dp"
            android:layout_height="70dp"

            />



    </LinearLayout>





</LinearLayout>