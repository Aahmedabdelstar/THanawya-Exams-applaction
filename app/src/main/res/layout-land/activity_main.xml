<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.example.ahmedabdelsttar.sec_final.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:id="@+id/l1">
    <Button
        android:visibility="visible"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="امتحانات البوكليت"

        android:id="@+id/bokl"

        android:layout_margin="10sp"
        android:background="#ffffff"
        android:textColor="#a82323"


        />

    <Button
        android:layout_margin="10sp"
        android:visibility="visible"

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="امتحانات دليل التقويم"
        android:id="@+id/proof"

        android:background="#ffffff"
        android:textColor="#a82323"

        android:layout_centerHorizontal="true"

        />

    <Button
        android:layout_margin="10sp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="امتحانات التجريبية للوزارة"
        android:id="@+id/exp_ministry"

        android:visibility="visible"
        android:background="#ffffff"
        android:textColor="#a82323"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_below="@+id/l1">
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="امتحانات السنوات السابقة"
        android:id="@+id/past_exam"

        android:visibility="visible"
        android:layout_margin="20sp"
        android:background="#ffffff"
        android:textColor="#a82323"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="امتحانات السودان"
        android:id="@+id/sudan_exam"
        android:layout_centerHorizontal="true"

        android:visibility="visible"
        android:layout_margin="20sp"
        android:background="#ffffff"
        android:textColor="#a82323"
        />


        <ImageView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:background="@drawable/pen"
            android:id="@+id/image">

        </ImageView>


</LinearLayout>

</LinearLayout>
